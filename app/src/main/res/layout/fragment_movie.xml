<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="com.example.htetaunglwin.padc_pulse.MovieFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:background="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view2"
            android:paddingTop="16dp"
            android:text="warcraft: the beginning (3D)"
            android:textAllCaps="true"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_name"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/view2"
            android:text="details"
            android:textAllCaps="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_name"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/btn_detail"
            android:text="share"
            android:textAllCaps="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Story"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/about_movie"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="read more"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/holo_blue_light" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/movie_announcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Now Showing In"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/theatre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_announcement"
                android:paddingLeft="16dp"
                android:text="Movie Planet"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/theatre"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="Pyin Oo Lwin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/show_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="10:00 AM, 12:30 PM, 3:30 PM, 6:30 PM"
                android:textAppearance="?android:textAppearanceSmall" />

            <ImageView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/movie_announcement"
                android:layout_margin="8dp"
                android:src="@drawable/ic_phone_black_24dp" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_announcement"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@id/phone"
                android:src="@drawable/ic_share_black_24dp" />

            <TextView
                android:id="@+id/theatre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_time"
                android:padding="16dp"
                android:paddingLeft="16dp"
                android:text="Mingalar Tun Thiri"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/city2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/theatre2"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="Pyin Oo Lwin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/show_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city2"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="10:00 AM, 12:30 PM, 3:30 PM, 6:30 PM"
                android:textAppearance="?android:textAppearanceSmall" />

            <ImageView
                android:id="@+id/phone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/show_time"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_phone_black_24dp" />

            <ImageView
                android:id="@+id/share2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show_time"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:layout_toLeftOf="@id/phone2"
                android:src="@drawable/ic_share_black_24dp" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
